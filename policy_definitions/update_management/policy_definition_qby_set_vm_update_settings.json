{
    "name": "QBY-Set-Update-Settings",
    "type": "Microsoft.Authorization/policyDefinitions",
    "properties": {
        "displayName": "Configure patch mode of Azure VMs for Azure Update Manager",
        "policyType": "Custom",
        "mode": "Indexed",
        "description": "Configure patch mode setting to AutomaticByPlatform for azure vms.",
        "metadata": {
            "version": "1.0.0",
            "category": "Azure Update Manager"
        },
        "parameters": {
            "osType": {
                "type": "String",
                "metadata": {
                    "displayName": "OS type",
                    "description": "OS type for the machines."
                },
                "allowedValues": [
                    "Windows",
                    "Linux"
                ],
                "defaultValue": "Windows"
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Compute/virtualMachines"                        
                    },
                    {
                        "field": "tags['Severity Group Monthly']",
                        "exists": true
                    },
                    {
                        "anyOf": [
                            {
                                "field": "Microsoft.HybridCompute/machines/osName",
                                "equals": "[parameters('osType')]"
                            },
                            {
                                "field": "Microsoft.Compute/virtualMachines/storageProfile.osDisk.osType",
                                "equals": "[parameters('osType')]"
                            }
                        ]
                    }
                ]
            },
            "then": {
                "effect": "modify",
                "details": {
                    "roleDefinitionIds": [
                        "/providers/Microsoft.Authorization/roleDefinitions/9980e02c-c2be-4d73-94e8-173b1dc7cf3c"
                    ],
                    "operations": [
                        {
                            "condition": "[equals(tolower(parameters('operatingSystemTypes')), 'windows')]",
                            "operation": "addOrReplace",
                            "field": "Microsoft.Compute/virtualMachines/osProfile.windowsConfiguration.patchSettings.patchMode",
                            "value": "AutomaticByPlatform"
                        },
                        {
                            "condition": "[equals(tolower(parameters('osType')), 'linux')]",
                            "operation": "addOrReplace",
                            "field": "Microsoft.Compute/virtualMachines/osProfile.linuxConfiguration.patchSettings.patchMode",
                            "value": "AutomaticByPlatform"
                        }
                    ]
                }
            }
        }
    }
}