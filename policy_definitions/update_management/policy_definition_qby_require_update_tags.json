{
    "name": "QBY-Require-Severity-Group-Tag",
    "type": "Microsoft.Authorization/policyDefinitions",
    "apiVersion": "2021-06-01",
    "properties": {
        "policyType": "Custom",
        "mode": "All",
        "displayName": "Deny Resources that are missing the severity group monthly tag.",
        "description": "This policy ensures the tag for severiy group monthly is set and the general syntag is correct.",
        "metadata": {
            "version": "1.0.0",
            "category": "Azure Update Manager"
        },
        "parameters": {
            "osOffer": {
                "type": "String",
                "metadata": {
                    "displayName": "osOffer",
                    "description": "OS offer of azure virtual machines that get filtered for in the configuration assignment."
                },
                "defaultValue": "Windows*"
            },
            "osTypes": {
                "type": "array",
                "defaultValue": [
                    "Windows"
                ],
                "metadata": {
                    "description": "OS Types of azure arc machines that get filtered for in the configuration assignment."
                }
            },
            "resourceTypes": {
                "type": "array",
                "defaultValue": [
                    "microsoft.compute/virtualmachines"
                ],
                "metadata": {
                    "description": "ResourceTypes that get filtered for in the configuration assignment."
                }
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "in": "[parameters('resourceTypes')]"
                    },
                    {
                        "anyOf": [
                            {
                                "allOf": [
                                    {
                                        "field": "type",
                                        "equals": "Microsoft.HybridCompute/machines"
                                    },
                                    {
                                        "field": "Microsoft.HybridCompute/machines/osName",
                                        "in": "[parameters('osTypes')]"
                                    }
                                ]
                            },
                            {
                                "allOf": [
                                    {
                                        "field": "type",
                                        "equals": "Microsoft.Compute/virtualMachines"
                                    },
                                    {
                                        "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer",
                                        "like": "[parameters('osOffer')]"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "anyOf": [
                            {
                                "exists": false,
                                "field": "[concat('tags[Severity Group Monthly]')]"
                            },
                            {
                                "not": {
                                    "equals": 6,
                                    "value": "[length(split(field(concat('tags[Severity Group Monthly]')),'-'))]"
                                }
                            }
                        ]
                    }
                ]
            },
            "then": {
                "effect": "deny"
            }
        }
    }
}