{
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "QBY-TestVnetConvention",
  "properties": {
    "displayName": "Vnet Convention",
    "description": "Test Subnet For Naming Convention, and if it has a rule that denys all inbound traffic",
    "policyType": "Custom",
    "mode": "Indexed",
    "metadata": {
      "version": "1.0.0",
      "category": "NetworkSecurity"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "defaultValue": "Deny",
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "metadata": {
          "displayName": "Effect",
          "description": "The effect determines what happens when the policy rule is evaluated to match"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            typ ist gleich Microsoft.Network/virtualNetworks
          },
          {
            vnet name startet mit vnet-*
          },
          {
            vnet name hat mind 7 teile
          },
          {
            "count": {
              "field": "Microsoft.Network/virtualNetworks/subnets[*]",
              "not"{
                  "allOf": [
                    {
                      Subnetname startet mit snet-*
                    },
                    {
                      subnet name besteht aus mind 7 teilen
                    },
                    {
                      NSG endet mit name vom vnet
                    },
                    {
                      nsg existiert
                    },
                    {
                      subnetname hat von pos 2 bis 6 eine adressrange
                    }
                  ]
                }
      "then": {
        "effect": "[parameters('effect')]",
        "details": {}
      }
    }
  }
}