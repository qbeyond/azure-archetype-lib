{
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "QBY-TestVnetConvention",
  "properties": {
    "displayName": "Vnet Convention",
    "description": "Test Subnet For Naming Convention, and if it has a rule that denys all inbound traffic",
    "policyType": "Custom",
    "mode": "Indexed",
    "metadata": {
      "version": "1.0.0",
      "category": "NetworkSecurity"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "defaultValue": "Deny",
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "metadata": {
          "displayName": "Effect",
          "description": "The effect determines what happens when the policy rule is evaluated to match"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/virtualNetworks"
          },
          {
            "count": {
              "field": "Microsoft.Network/virtualNetworks/subnets[*]",
              "where": {
                "not": {
                  "allOf": [
                    {
                      "field": "Microsoft.Network/virtualNetworks/subnets[*].name",
                      "like": "snet-*"
                    },
                    {
                      "value": "[length(split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-'))]",
                      "greaterOrEquals": 6
                    },
                    {
                      "value": "[endsWith(field('Microsoft.Network/virtualNetworks/subnets[*].networkSecurityGroup.id')[0], field('name'))]",
                      "equals": "true"
                    },
                    {
                      "field": "Microsoft.Network/virtualNetworks/subnets[*].networkSecurityGroup.id",
                      "exists": "true"
                    },
                    {
                      "anyOf": [
                        {
                          "value": "[if(greaterOrEquals(length(split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')), 5), split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')[1], 'length of name incorrect')]",
                          "match": "#"
                        },
                        {
                          "value": "[if(greaterOrEquals(length(split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')), 5), split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')[1], 'length of name incorrect')]",
                          "match": "##"
                        },
                        {
                          "value": "[if(greaterOrEquals(length(split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')), 5), split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')[1], 'length of name incorrect')]",
                          "match": "###"
                        }
                      ]
                    },
                    {
                      "anyOf": [
                        {
                          "value": "[if(greaterOrEquals(length(split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')), 5), split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')[3], 'length of name incorrect')]",
                          "match": "#"
                        },
                        {
                          "value": "[if(greaterOrEquals(length(split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')), 5), split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')[3], 'length of name incorrect')]",
                          "match": "##"
                        },
                        {
                          "value": "[if(greaterOrEquals(length(split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')), 5), split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')[3], 'length of name incorrect')]",
                          "match": "###"
                        }
                      ]
                    },
                    {
                      "anyOf": [
                        {
                          "value": "[if(greaterOrEquals(length(split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')), 5), split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')[4], 'length of name incorrect')]",
                          "match": "#"
                        },
                        {
                          "value": "[if(greaterOrEquals(length(split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')), 5), split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')[4], 'length of name incorrect')]",
                          "match": "##"
                        },
                        {
                          "value": "[if(greaterOrEquals(length(split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')), 5), split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')[4], 'length of name incorrect')]",
                          "match": "###"
                        }
                      ]
                    },
                    {
                      "anyOf": [
                        {
                          "value": "[if(greaterOrEquals(length(split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')), 5), split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')[5], 'length of name incorrect')]",
                          "match": "#"
                        },
                        {
                          "value": "[if(greaterOrEquals(length(split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')), 5), split(field('Microsoft.Network/virtualNetworks/subnets[*].name')[0], '-')[5], 'length of name incorrect')]",
                          "match": "##"
                        }
                      ]
                    }
                  ]
                }
              }
            },
            "greater": 0
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {}
      }
    }
  }
}