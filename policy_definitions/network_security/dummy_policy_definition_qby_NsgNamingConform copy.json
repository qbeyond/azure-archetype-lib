{
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "QBY-TestNsgForNamingConvention",
  "properties": {
    "displayName": "Nsg Convention",
    "description": "Test Nsg For Naming Convention, and if it has a rule that denys all inbound traffic",
    "policyType": "Custom",
    "mode": "Indexed",
    "metadata": {
      "version": "1.0.0",
      "category": "NetworkSecurity"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "defaultValue": "Deny",
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "metadata": {
          "displayName": "Effect",
          "description": "The effect determines what happens when the policy rule is evaluated to match"
        }
      }
    },
    "policyRule": {
      "if": {
        "not": {
          "allOf": [
            {
              Type ist gleich Microsoft.Network/networkSecurityGroups
            },
            {
              Name startet mit "nsg-vnet-*"
            },
            {
              Name hat 7 oder mehr "-"
            },
            {
              teil 2-7 entspicht einem Netzwerkbereich
            },
            {
              in den Securityrules ist die DenyAllInboundTraffic Rule
            }
          ]
        }
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {}
      }
    }
  }
}