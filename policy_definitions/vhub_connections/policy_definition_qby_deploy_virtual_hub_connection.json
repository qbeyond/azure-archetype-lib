{
  "name": "QBY-Deploy-virtual-hub-connection",
  "properties": {
    "displayName": "Configure virtual hub connections from virtual networks to virtual wan hub",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "Deploy virtual hub connections from virtual networks to virtual wan hub",
    "metadata": {
      "version": "1.0.0",
      "category": "Network"
    },
    "parameters": {
      "tagName": {
        "type": "String",
        "metadata": {
          "displayName": "Tag Name",
          "description": "Name of the tag to use for excluding or including vNets in the scope of this policy. See inclusionTagValue and exclusionTagValue for detailed information."
        },
        "defaultValue": "VWANHubConnection"
      },
      "exclusionTagValue": {
        "type": "String",
        "metadata": {
          "displayName": "Exclusion Tag Value",
          "description": "Value of the tag to exclude VNets in the scope of this policy."
        },
        "defaultValue": "Disabled"
      },
      "inclusionTagValue": {
        "type": "String",
        "metadata": {
          "displayName": "Inclusion Tag Value",
          "description": "If set to a different value then empty string, only include vNets with that tag value."
        },
        "defaultValue": ""
      },
      "virtualHubId": {
        "type": "string",
        "metadata": {
          "description": "Id of the virtual hub"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/virtualNetworks"
          },
          {
            "field": "[concat('tags[', parameters('tagName'), ']')]",
            "notEquals": "[parameters('exclusionTagValue')]"
          },
          {
            "anyOf": [
              {
                "value": "[parameters('inclusionTagValue')",
                "equals": ""
              },
              {
                "field": "[concat('tags[', parameters('tagName'), ']')]",
                "equals": "[parameters('inclusionTagValue')]"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "DeployIfNotExists",
        "details": {
          "type": "Microsoft.Network/virtualHubs/hubVirtualNetworkConnections",
          "name": "[concat(last(split(parameters('virtualHubId'), '/')),'/',concat(field('name'),'-to-vhub'))]",
          "ExistenceScope": "Subscription",
          "existenceCondition": {
            "field": "Microsoft.Network/virtualHubs/hubVirtualNetworkConnections/remoteVirtualNetwork.id",
            "equals": "[field('id')]"
          },
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/4d97b98b-1d4f-4787-a291-c67834d212e7"
          ],
          "DeploymentScope": "resourceGroup",
          "EvaluationDelay": "AfterProvisioningSuccess",
          "deployment": {
            "properties": {
              "mode": "Incremental",
              "parameters": {
                "hubVirtualNetworkConnectionName": {
                  "value": "[concat(field('name'),'-to-vhub')]"
                },
                "remoteVirtualNetworkId": {
                  "value": "[field('id')]"
                },
                "virtualHubId": {
                  "value": "[parameters('virtualHubId')]"
                }
              }
            }
          }
        }
      }
    }
  }
}