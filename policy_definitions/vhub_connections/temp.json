{
  "name": "QBY-Deploy-virtual-hub-connection",
  "properties": {
    "displayName": "Configure virtual hub connections from virtual networks to virtual wan hub",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "Deploy virtual hub connections from virtual networks to virtual wan hub",
    "metadata": {
      "version": "1.0.0",
      "category": "Network"
    },
    "parameters": {
      "exclusionTagName": {
        "type": "String",
        "metadata": {
          "displayName": "Exclusion Tag Name",
          "description": "Name of the tag to use for excluding VMs in the scope of this policy. This should be used along with the Exclusion Tag Value parameter."
        },
        "defaultValue": "VWANHubConnection"
      },
      "exclusionTagValue": {
        "type": "String",
        "metadata": {
          "displayName": "Exclusion Tag Values",
          "description": "Value of the tag to use for excluding VMs in the scope of this policy. This should be used along with the Exclusion Tag Name parameter."
        },
        "defaultValue": "Disabled"
      },
      "virtualHubId": {
        "type": "string",
        "metadata": {
          "description": "Id of the virtual hub"
        }
      },
      "virtualHubResourceGroupName": {
        "type": "string",
        "metadata": {
          "description": "Name of the resource group from the virtual hub"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/virtualNetworks"
          },
          {
            "field": "[concat('tags[', parameters('exclusionTagName'), ']')]",
            "notEquals": "[parameters('exclusionTagValue')]"
          }
        ]
      },
      "then": {
        "effect": "DeployIfNotExists",
        "details": {
          "type": "Microsoft.Resources/deployments",
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/4d97b98b-1d4f-4787-a291-c67834d212e7"
          ],
          "DeploymentScope": "resourceGroup",
          "deployment": {
            "location": "westeurope",
            "properties": {
              "mode": "incremental",
              "parameters": {
                "remoteVirtualNetworkName": {
                  "value": "[field('name')]"
                },
                "remoteVirtualNetworkId": {
                  "value": "[field('id')]"
                },
                "virtualHubId": {
                    "value": "[parameters('virtualHubId')]"
                },
                "virtualHubResourceGroupName": {
                    "value": "[parameters('virtualHubResourceGroupName')]"
                    }
                  
              },
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                  "virtualHubId": {
                    "type": "string",
                    "metadata": {
                      "description": "Id of the virtual hub"
                    }
                  },
                  "virtualHubResourceGroupName": {
                    "type": "string",
                    "metadata": {
                      "description": "Name of the resource group from the virtual hub"
                    }
                  },
                  "remoteVirtualNetworkName": {
                    "type": "string",
                    "metadata": {
                      "description": "Name of the Vitual Network"
                    }
                  },
                  "remoteVirtualNetworkId": {
                    "type": "string",
                    "metadata": {
                      "description": "Id of the Vitual Network"
                    }
                  }
                },
                "variables": {
                  "virtualHubName": "[last(split(parameters('virtualHubId'), '/'))]"
                },
                "resources": [
                  {
                    "type": "Microsoft.Resources/deployments",
                    "apiVersion": "2021-04-01",
                    "name": "[concat('NestedPolicyDeployment-', uniqueString(deployment().name))]",
                    "resourceGroup": "[parameters('virtualHubResourceGroupName')]",
                    "properties": {
                      "mode": "Incremental",
                      "template": {
                        "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                        "contentVersion": "1.0.0.0",
                        "parameters": {},
                        "variables": {},
                        "resources": [
                          {
                            "type": "Microsoft.Network/virtualHubs/hubVirtualNetworkConnections",
                            "apiVersion": "2022-07-01",
                            "name": "[concat(variables('virtualHubName'),'/',parameters('remoteVirtualNetworkName'),'-to-vwan')]",
                            "properties": {
                              "enableInternetSecurity": true,
                              "remoteVirtualNetwork": {
                                "id": "[parameters('remoteVirtualNetworkId')]"
                              },
                              "routingConfiguration": {
                                "associatedRouteTable": {
                                  "id": "[concat(parameters('virtualHubId'),'/hubRouteTables/defaultRouteTable')]"
                                },
                                "propagatedRouteTables": {
                                  "ids": [
                                    {
                                      "id": "[concat(parameters('virtualHubId'),'/hubRouteTables/noneRouteTable')]"
                                    }
                                  ]
                                }
                              }
                            }
                          }
                        ],
                        "outputs": {}
                      }
                    }
                  }
                ],
                "outputs": {}
              }
            }
          }
        }
      }
    }
  }
}
